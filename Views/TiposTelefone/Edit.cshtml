@model GrudColorado.Models.Telefone

@{
    ViewBag.Title = "Editar Telefone";
}

<h1>Editar Telefone</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.NumeroTelefone)
        @Html.TextBoxFor(model => model.NumeroTelefone, new { @class = "form-control", @readonly = "readonly" })
        @Html.ValidationMessageFor(model => model.NumeroTelefone)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CodigoTipoTelefone)
        @Html.DropDownListFor(model => model.CodigoTipoTelefone, (SelectList)ViewData["TiposTelefone"], "Selecione o Tipo", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.CodigoTipoTelefone)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Operador)
        @Html.TextBoxFor(model => model.Operador, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Operador)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ativo)
        @Html.CheckBoxFor(model => model.Ativo)
        @Html.ValidationMessageFor(model => model.Ativo)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DataInsercao)
        @Html.TextBoxFor(model => model.DataInsercao, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(model => model.DataInsercao)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.UsuarioInsercao)
        @Html.TextBoxFor(model => model.UsuarioInsercao, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.UsuarioInsercao)
    </div>

    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
}
